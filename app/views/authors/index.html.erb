<h1>Authors</h1>
<div><%= link_to "Create new", new_author_path %></div>
<ul>
<% @authors.each do |author| %>
	<li>
		<%= link_to author.name, url_for(author) %>
		<%= form_for( author, html: { method: 'delete' } ) do |f| %>
			<div><%= f.hidden_field :id, value: author.id %></div>
			<div><%= f.submit "delete" %></div>
		<% end %>
	</li>
<% end %>
</ul>